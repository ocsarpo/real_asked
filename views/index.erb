<html>
<head>
  <meta charset="utf-8">
  <title>Real Asked</title>
</head>
<body>
  <h1>ASKED!! </h1>
  <form action="/ask">
    <select class="custom-select" name="id">
    <option selected>익명, 이름 중 선택</option>
    <option value="익명">익명</option>
    <option value="<%=session[:email]%>">이름</option>
    </select>
    <div class="form-group">
      <label for="exampleInputEmail1">Q. </label>
      <input type="text" name="question" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="질문을 입력해주세요.">
    </div>
    <button type="submit" class="btn btn-primary">질문등록</button>
  </form>

  <hr>
  <h1>질문목록</h1>
  <% @q_list.each do |q| %>
  <div class="card">
    <div class="card-body">
      등록시간 : <%=q.created_at.strftime("%Y/%m/%d %H:%M")%><br>
      이름 : <%=q.name%><br>
      질문 : <%=q.content%>
    </div>
  </div>
  <% end %>

</body>
</html>
